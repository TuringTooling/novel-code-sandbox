# Base image for all language sandboxes
FROM alpine:latest

# Install common tools
RUN apk update && \
    apk add --no-cache \
    bash \
    curl \
    wget \
    git \
    ca-certificates \
    tzdata

# Create directory for shared tasks
RUN mkdir -p /sandbox/tasks

# Set working directory
WORKDIR /sandbox

# Keep container running
CMD ["tail", "-f", "/dev/null"]